<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:text="Demo"
            android:layout_column="1"
            android:padding="3dip"
            android:id="@+id/predictionContent"
            android:textSize="10sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#FF5722"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal|bold" />

        <TextView
            android:text="Demo"
            android:layout_column="2"
            android:padding="3dip"
            android:id="@+id/idContent"
            android:textSize="10sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#757575"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal|bold" />

        <TextView
            android:text="Demo"
            android:layout_column="3"
            android:padding="3dip"
            android:id="@+id/dateContent"
            android:textSize="10sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#757575"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Demo"
            android:layout_column="4"
            android:padding="3dip"
            android:id="@+id/timeContent"
            android:textSize="10sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#757575"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Demo"
            android:layout_column="5"
            android:padding="3dip"
            android:id="@+id/lightContent"
            android:textSize="10sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#FFC107"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Demo"
            android:layout_column="6"
            android:padding="3dip"
            android:id="@+id/soundContent"
            android:textSize="10sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#3F51B5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Demo"
            android:layout_column="7"
            android:padding="3dip"
            android:id="@+id/movContent"
            android:textSize="10sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#E64A19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Demo"
            android:layout_column="8"
            android:padding="3dip"
            android:id="@+id/chargingContent"
            android:textSize="10sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#757575"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Demo"
            android:layout_column="9"
            android:padding="3dip"
            android:id="@+id/lockContent"
            android:textSize="10sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#757575"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </TableRow>

</TableLayout>